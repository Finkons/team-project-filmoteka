<div class='modal-form'>
  <input type='checkbox' id='chk' aria-hidden='true' />
  <div class='signup'>
    <form>
      <label class='label-form' for='chk' aria-hidden='true'>Sign up</label>
      <input class='input-form' type='email' name='email' placeholder='Email' required='required' />
      <input
        class='input-form'
        type='password'
        name='pswd'
        placeholder='Password'
        required='required'
      />
      <button class='button-form'>Sign up</button>
    </form>
  </div>

  <div class='login'>
    <form>
      <label class='label-form' for='chk' aria-hidden='true'>Login</label>
      <input class='input-form' type='email' name='email' placeholder='Email' required='required' />
      <input
        class='input-form'
        type='password'
        name='pswd'
        placeholder='Password'
        required='required'
      />
      <button class='button-form'>Login</button>
    </form>
  </div>
</div>